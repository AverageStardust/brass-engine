{
    "include": [
        "src/index.ts"
    ],
    "compilerOptions": {
        "types": [
            "p5/global",
            "matter-js"
        ],
        "declaration": true,
        "declarationDir": "./dist",
        "allowUmdGlobalAccess": true,
        "esModuleInterop": true,
        "target": "ES5",
        "module": "ES2020",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "removeComments": true,
        "downlevelIteration": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitThis": false,
        "skipLibCheck": true
    }
}